<% if question.flags_count > 0 and question.status == 'published' and logged_in? and current_user.is_admin? %>
	<div class="warning_inline" id="question_flag_<%= question.id.to_s %>">
		<span class="red"><%= tr("{count} flags", "view/points/_flagged", :count => question.flags_count)%></span>. <%= tr("Issue {user_name} warning {warnings_count}", "view/points/_flagged", :user_name => question.user.login, :warnings_count => question.user.warnings_count) %>
		<span class="tag_button">
			<%= link_to tr("YES", "view/points/_flagged"), "/questions/abusive/#{question.id}",
                  :method=>:post,
                  :remote=>true,
                  'data-disable-with' => escape_t(tr("Issuing warning","Ajax")),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Issue warning", "view/points/_flagged") %></span>
		<span class="or"><%= tr("OR", "view/points/_flagged") %></span>

		<span class="tag_button">
			<%= link_to tr("NO", "view/points/_flagged"), "/questions/not_abusive/#{question.id}",
                  :method=>:post,
                  :remote=>true,
                  'data-disable-with' => escape_t(tr("Clearing warning","Ajax"),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Clear flag", "view/points/_flagged") %>
		</span>		
	</div>
<% end %>