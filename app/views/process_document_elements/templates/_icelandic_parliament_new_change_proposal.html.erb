<%= form_tag({ controller: :process_document_elements, action: :create_change_proposal }, { remote: :true }) do -%>
  <%= cktext_area("source_element", :content, :toolbar => 'Simple', :width => '100%', :height => '300px') %>
  <br><br>
  <%= hidden_field_tag :source_id, element.id %>
  <%= submit_tag tr("Submit change proposal", "view/process_document_elements/templates") %>
  <%= button_to( tr("Cancel", "view/process_document_elements/templates"),
                           { :url => { :controller => "process_document_elements", :action => "cancel_new_change_proposal",
                             :source_id => element.id, :sequence_number => element.sequence_number } },
                           { :remote => true, :class => "", :name => "", :title => tr("Cancel", "view/process_document_elements/templates") } ) %>
 <% end -%>
