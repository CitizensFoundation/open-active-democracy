<% if logged_in? %>
<!-- Comment box -->
<div class="comment_link_add answer_box" id="activity_<%=activity.id.to_s%>_comment_form">
    <p>
        <% form_remote_for comment, :url => activity_comments_path(activity), :loading=>"$('submit_span_#{activity.id}').toggle(); $('loading_span_#{activity.id}').toggle();" do |f| %>
        <%= f.error_messages %>
        <table>
            <tr>
                <td colspan="2">
                    <%= f.text_area :content, :size => "60x1", :class=>"comment_content_display_value", :id => "comment_content_#{activity.id.to_s}" %>
                    <br>
                </td>
            </tr>
            <tr>
                <td align="left">
                	<% if current_facebook_user %>
                    Senda athugasemd á Facebook líka? <%= check_box_tag "send_to_facebook", "yes", false %>
					<% end %>
                </td>
                <td align="right">
				  <span id="submit_span_<%=activity.id%>">
                    <%= f.submit t('esb.send') %>
				  </span>
				  <span id = "loading_span_<%=activity.id%>" style = "display: none;">
				    <%= image_tag("submit-loader.gif")%>
				  </span>
                </td>
            </tr>
        </table>
        <% end %>
    </p>
</div>
<!-- <div id="comment_error_<%= activity.id.to_s %>" class="comment_error"></div> -->
