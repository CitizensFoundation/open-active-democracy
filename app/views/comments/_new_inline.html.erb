<% if logged_in? %>
<!-- Comment box -->	

	<div class="comment_link_add answer_box" id="activity_<%=activity.id.to_s%>_comment_form">
		<p>
			<% form_remote_for comment, :url => activity_comments_path(activity), :loading=>"Form.Element.disable('comment-form-submit')" do |f| %>		
				<%= f.error_messages %>
				<%= f.text_area :content, :size => "60x1", :class=>"comment_content_display_value", :id => "comment_content_#{activity.id.to_s}" %>
				<%= f.submit t('esb.send') %>
			<% end %>
		</p>	
	</div>
	<!-- <div id="comment_error_<%= activity.id.to_s %>" class="comment_error"></div> -->

