<%= render :partial => "documents/header" %>
<%= render :partial => "documents/nav" %>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
	<tr>
		
		<td valign="top">

			<% if @document.revision_id != @revision.id %>
			<p>
			<div class="notice">
				<%= tr("Here's what this document looked like {time_ago}. You can also <a href='{revision_url}'>see the changes</a> in this version from the previous one.", "view/document_revisions/clean", :revision_url => document_revision_url(@document,@revision), :time_ago => time_ago(@revision.created_at)) %>
			</div>
			<% end %>

			<%= @revision.content_html %>
			
		</td>	
		
		<td valign="top" width="150" style="padding-left: 20px;">

			<%= render :partial => "revisions" %>

		</td>		
	
	</tr>
</table>
