<div id="add_portlet">
            <a href="#" class="fg-button fg-button-icon-right ui-widget ui-state-default ui-corner-all" id="portlets-menu"><span class="ui-icon ui-icon-triangle-1-s"></span><%=tr("Add portlet", "view/portal/_menu")%></a>
            <div id="portlets" class="hidden">
                <ul>
                    <% PortletTemplateCategory.by_weight.all.each do |template_category| %>
						<% if not template_category.partner_id or (Partner.current and Partner.current.id == template_category.partner_id) %>
		                    <li>
		                        <a href="#"><%=tr(template_category.name, "view/portal/_menu").titleize %></a>
		                        <ul>
		                            <% template_category.portlet_templates.each do |portlet_template| %>
		                            <li>
		                                <a href="#"><%=tr(portlet_template.name, "view/portal/_menu").titleize %>-<%=portlet_template.id %></a>
		                            </li>
		                            <%end %>
		                        </ul>
		                    </li>
	                    <% end %>
                    <% end %>
                </ul>
            </div>
 </div>
