<%= render :partial => "points/header" %>
<%= render :partial => "points/nav" %>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
	<tr>
		
		<td valign="top">

			<% if @point.revision_id != @revision.id %>
			<p>
			<div class="notice">
				<%= tr("Here's what this talking point looked like {time_ago}. You can also <a href='{revision_url}'>see the changes</a> in this version from the previous one.", "view/revisions/clean", :revision_url => point_revision_url(@point,@revision), :time_ago => time_ago(@revision.created_at)) %>
			</div>
			<% end %>

			<p>
			<div class="point_content_detail">
			<%= @revision.content_html %>
			</div>
			<% if @revision.has_website? %>
				<div class="point_source">
				<%= tr("Source:", "view/revisions/clean")%> <a href="<%= @revision.website_link %>"><%= truncate(@revision.website_link,:length=>70) %></a>
				</div>
			<% end %>
			
		</td>	
		
		<td valign="top" width="150" style="padding-left: 20px;">

			<%= render :partial => "revisions" %>

		</td>		
	
	</tr>
</table>
