<% if @error %>
<%=@error%>
<% else %>
<h2>Leitarniðurstöður fyrir <%=@query%></h2><br>
<% if params[:cached_issue_list] %>
<h4>Kafli: <%=params[:cached_issue_list]%></h4>
<% elsif params[:class] %>
<h4>Tegund: <%=translate_facet_option(params[:class])%></h4>
<% end %>

<div> 
	<% unless @search_results.empty? %>
			<%=will_paginate @search_results %>
			<div>
			<% @search_results.each do |result|%>
			<!-- PRITORITY --> 
			<% if result.class == Priority %>
				<div class="comment_box">
					<%#= render :partial => "users/pic_35", :locals => {:user => result.activity.comment.user}%>	
					<span class="entry_profile">
					<%= h(result.activity.comment.user.login) %>
			 - <%= time_ago(result.activity.comment.created_at) %> 
			 	</span>
				Umræðuefni: <%= result.excerpts.name %><br>
						<%=link_to "Skoða umræðuefni", :controller=>"priorities", :action=>"show", :id=>result.id %><br>	
			</div>
	
			<% elsif result.class == Question %>
			<div>
				<h4> Spurning og svar - <%= time_ago(result.excerpts.created_at) %></h4> 				
				<h3><%= h(result.excerpts.name) %></h3><nobr>
				Spurning: <%= result.excerpts.content %><br>
				Svar: <%= result.excerpts.answer %><br>
				<%= link_to "Skoða spurningu og svar", :controller=>"questions", :action=>"show", :id=>result.id %>
			</div>
			
			<% elsif result.class == Document %>
			<div>				
				<h3><%= result.excerpts.name %><br></h3>
				<%= result.excerpts.content %><br>
				<%= link_to "Skoða erindi", :controller=>"documents", :action=>"show", :id=>result.id %><br><br>
			</div>
			<% elsif result.class == Comment%>
				  	<h5>Athugasemd:</h5> 
					<%= result.excerpts.content %><br>				  	
				  	<% if result.activity.priority_id %>
						<%=link_to "Skoða umræðuefni", :controller=>"priorities", :action=>"show", :id=>result.activity.priority_id %><br><br>
					<% elsif result.activity.question_id  %>
						<%= link_to "Skoða spurningu og svar", :controller=>"questions", :action=>"show", :id=>result.activity.question_id %><br><br>
					<% end %>
			<% end %>
				
				
				
				<% end %>
				</div> 
				
				<%=will_paginate @search_results%>
			<% else %>
			   No search results for <%=@query %>
			<% end %>
		</div> 
		

<% unless not @facets or @facets.empty?%>
<div id="RightCol">	

				<div>
					<div> 
						<h3><%= link_to "Allt", "/leita?q=#{@query}"%></h3>
					</div>
				</div>
						
				<% @facets.each do |facet, facet_options| %>
					<div>
						<div> 
							<% if facet.to_s=="class" %>
							<h3>Tegund</h3> 
							<% elsif facet.to_s=="cached_issue_list" %>
							<h3>Kaflar</h3> 
							<% else %>
							<h3><%=facet%></h3> 
							<% end %>
							<ul>
								<% facet_options.each do |option, count| %>
									<% next if option==nil or option=="" %>
									<% translated_option = translate_facet_option(option) %>
									<% if translated_option==params[:cached_issue_list] or option==params[:class]%>
										<li><b><%= link_to "#{translated_option} (#{count})", :params => {facet => option, :q=>@query, :page => 1} %></b></li>
									<% else %>
										<li><%= link_to "#{translated_option} (#{count})", :params => {facet => option, :q=>@query, :page => 1} %></li>
									<% end %>
								<% end %>
							</ul> 
						</div> 
					</div> 
				<% end %>
</div>
			
<% else %>
	Engir kaflar fundust
<% end %>			
<% end %>
