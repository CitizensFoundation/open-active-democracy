<div id="hp_intro"><%= @page_title %></div>
<p>
<% form_tag(questions_searches_path, :method => 'get') do %>
<table cellpadding="0" cellspacing="0">
<tr>
	<td valign="middle"><%= text_field_tag "q", params[:q] %></td>
	<td valign="middle" style="padding-left:5px;"><%= submit_tag t('searches.new.submit'), :class => "yellow_button" %></td>
</tr>
</table>
<% end %>
<p>
<% if @questions %>
	<%= render :partial => "nav" %>
<% end %>
<% if not @questions %>
<% elsif @questions.empty? %>
	<%= t('briefing.search.empty') %>
<% else %>
	<% if @question_results.total_hits > 15 %>
	<%= will_paginate WillPaginate::Collection.new((params[:page]||1),(15),@question_results.total_hits) -%>
	<p>
	<% end %>
	<% for point in @questions %>
		<% quality = nil %>
		<% if @qualities %>
			<% quality = @qualities.detect {|e| e.question_id == point.id } %>
		<% end %>	
		<%= render :partial => "questions/show_full", :locals => {:point => point, :quality => quality, :revision => nil}%>
	<% end %>

	<p>
	<%= will_paginate WillPaginate::Collection.new((params[:page]||1),(15),@question_results.total_hits) -%>
<% end %>
