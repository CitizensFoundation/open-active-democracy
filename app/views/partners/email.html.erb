<div id="hp_intro"><%= @page_title %></div>
<p>

<%= form_for(@partner) do |f| %>
  <%= f.error_messages %>
	<%= tr("Turning this on will add a checkbox to all the signup forms on http://{partner_short_name}.{base_url}/ for people to opt-in for your email list. It defaults to checked.", "view/partners/email", :partner_short_name => @partner.short_name, :base_url => current_government.base_url)%>
	<p>
	  <%= f.check_box :is_optin %> <%= tr("Request every new member's permission to be added to your email list.", "view/partners/email")%>
	</p>
	<div style="padding-left: 30px;">
	<p>
	  <%= tr("What should the opt-in language say?", "view/partners/email")%><br />
	  <%= f.text_field :optin_text %>
	</p>
	<p>
	  <%= tr("URL for your privacy policy", "view/partners/email")%><br />
	  <%= f.text_field :privacy_url %>
	</p>
	<p>
	  <%= tr("URL where people can subscribe", "view/partners/email")%><br />
	  <%= f.text_field :subscribe_url %>
	</p>
	<p>
	  <%= tr("URL where people can <i>un</i>subscribe", "view/partners/email")%><br />
	  <%= f.text_field :unsubscribe_url %>
	</p>		
	</div>
  <p>
    <%= f.submit tr("Update email list info", "view/partners/email"), :class => "yellow_button" %>
  </p>
<% end %>
