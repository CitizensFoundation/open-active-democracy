<table>
<tr>
<td align="left" valign="top">
<% @convert = %w[one two three four five] %>
<div id="star-ratings-block-<%= "#{asset.id}_#{asset.class.name}"  %>" class="star-ratings-block">  
<ul class='star-rating_smaller'>
    <li class='current-rating' style='width:<%= (asset.rating * 15).to_i -%>px;'>
        <%=tr("Currently", "view/ratings/_rate_smaller_comments") %><%= number_with_precision(asset.rating, :precision=>1) %>/5
    </li>
    <% 1.upto(5) do |x| -%>
      <li>
        <%= link_to "#{x}",
              url_for(:controller => "ratings", :action => "rate",
                      :id => asset.id, :smaller_comments=> true, :rating => x, :rateable_type => asset.class.to_s),
              'data-disable-with' => "",
              'data-loader-name' => "circle",               
              :remote=>true,
              :class => "#{@convert[x-1]}-stars", :name => "#{pluralize(x,tr("Star", "view/ratings/_rate_smaller_comments"))} #{tr("out of 5", "view/ratings/_rate_smaller_comments")}",
              :title => tr("rate this", "view/ratings/_rate_smaller_comments")+"#{x}"+t(:out_of_5) %>
      </li>
    <% end -%>
</ul>
<span class="ratingsTinyText"><%= asset.ratings.size%> <%=tr("atkvæði", "view/ratings/_rate_smaller_comments") %></span>
</div>
</td>
</tr>
</table>
