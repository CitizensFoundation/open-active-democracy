<% if question.flags_count > 0 and question.status == 'published' and logged_in? and current_user.is_admin? %>
	<div class="warning_inline" id="question_flag_<%= question.id.to_s %>">
		<span class="red"><%= t('comments.flag.number', :count => question.flags_count)%></span>. <%= t('comments.flag.issue_warning.action', :user_name => question.user.login, :warnings_count => question.user.warnings_count) %>
		<span class="tag_button">
			<%= link_to_remote t('doit'), { :url => "/questions/abusive/#{question.id}", :loading=>"update('#{t('comments.flag.issue_warning.ing')}')" }, :class => "quality_unhelpful_link", :title => t('comments.flag.issue_warning.name') %></span>
		<span class="or"><%= t('or') %></span>

		<span class="tag_button">
			<%= link_to_remote t('dont'), { :url => "/questions/not_abusive/#{question.id}", :loading=>"update('#{t('comments.flag.clear.ing')}')" }, :class => "quality_unhelpful_link", :title => t('comments.flag.clear.name') %>
		</span>		
	</div>
<% end %>