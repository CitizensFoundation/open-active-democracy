<div id="nav_sub">
	<div style="float:right; margin-right: 10px; margin-top: 1px;">
		<%= render :partial => "network/find" %>
	</div>
	
	<% if @user and not @user.new_record? and ['users','messages'].include?(params[:controller]) %>
		<div id="nav_sub_<% if @user.is_influential? %>1<% elsif @user.is_ambassador? %>5<% elsif @user.is_new? %>4<% elsif @user.has_twitter? %>3<% end %>">
	<% else %>
		<div id="nav_sub_<% if ['index'].include?(params[:action]) and ['network'].include?(params[:controller]) %>1<% elsif ['talkative'].include?(params[:action]) %>2<% elsif ['twitterers'].include?(params[:action]) %>3<% elsif ['newest'].include?(params[:action]) %>4<% elsif ['ambassadors'].include?(params[:action]) %>5<% elsif ['partners'].include?(params[:action]) or ['partners'].include?(params[:controller]) %>6<% elsif ['suspended','probation','deleted','unverified','warnings'].include?(params[:action]) %>7<% end %>">
	<% end %>
		<ul id="menu_sub">
			<li class="tab1">
				<span class="tab_header">
					<%= link_to tr("Influential", "view/network/_nav"), :controller => "network" %>
				</span>
			</li>
			<li class="tab2">
				<span class="tab_header">
					<%= link_to tr("Talkative", "view/network/_nav"), :controller => "network", :action => "talkative" %>
				</span>
			</li>
			<% if current_government.has_twitter_enabled? %>
			<li class="tab3">
				<span class="tab_header">
					<%= link_to tr("Twitterers", "view/network/_nav"), :controller => "network", :action => "twitterers" %>
				</span>
			</li>
			<% end %>
			<li class="tab4">
				<span class="tab_header">
					<%= link_to tr("New members", "view/network/_nav"), :controller => "network", :action => "newest" %>
				</span>
			</li>
			<li class="tab5">
				<span class="tab_header">
					<%= link_to tr("Ambassadors", "view/network/_nav"), :controller => "network", :action => "ambassadors" %>
				</span>
			</li>
			<li class="tab6">
				<span class="tab_header">
					<%= link_to tr("Partners", "view/network/_nav"), :controller => "network", :action => "partners" %>
				</span>
			</li>
			<% if logged_in? and current_user.is_admin? %>
			<li class="tab7 mega">
				<span class="tab_header">
					<%= link_to tr("More", "view/network/_nav"), :controller => "network", :action => "newest" %>
				</span>
				
				<div class="tab_body">
					<%= link_to tr("Unverified", "view/network/_nav"), :controller => "network", :action => "unverified" %><br/>	
					<%= link_to tr("Warnings", "view/network/_nav"), :controller => "network", :action => "warnings" %><br/>										
					<%= link_to tr("Suspended", "view/network/_nav"), :controller => "network", :action => "suspended" %><br/>
					<%= link_to tr("Probation", "view/network/_nav"), :controller => "network", :action => "probation" %><br/>
					<%= link_to tr("Deleted", "view/network/_nav"), :controller => "network", :action => "deleted" %>
					<p>
				</div>				
			</li>
			<% end %>
		</ul>
	</div>
</div>
<% if current_user %>  
<div id="nav_sub">
  <div style="float:right; margin-right: 10px; margin-top: 1px;">
    <%= render :partial => "network/find" %>
  </div>
  <div id="nav_sub_<% if ['following'].include?(params[:action]) %>1<% elsif ['index','members','not_invited','invited'].include?(params[:action]) or ['import','facebook'].include?(params[:controller]) %>2<% elsif ['new'].include?(params[:action]) %>3<% end %>">
    <ul id="menu_sub">
      <li class="tab1">
        <span class="tab_header">
          <%= link_to tr("Your network", "view/user_contacts/_nav"), following_user_contacts_path(current_user) %>
        </span>
      </li>
      <li class="tab2">
        <span class="tab_header">
          <%= link_to tr("Find people you know", "view/user_contacts/_nav"), user_contacts_path(current_user) %>
        </span>
      </li>
      <li class="tab3">
        <span class="tab_header">
          <%= link_to tr("Send an invitation", "view/user_contacts/_nav"), new_user_contact_path(current_user) %>
        </span>
      </li>
    </ul>
  </div>
</div>
<% if ['index','members','not_invited','invited'].include?(params[:action]) or ['import','facebook'].include?(params[:controller]) %>
  
  <div id="nav_third">
    <div id="nav_third_<% if ['google'].include?(params[:action]) %>1<% elsif ['yahoo'].include?(params[:action]) %>2<% elsif ['windows'].include?(params[:action]) %>3<% elsif ['facebook'].include?(params[:controller]) %>4<% end %>"> 

      <ul id="menu_third">

        <li class="tab1">
          <span class="tab_header">
            <%= link_to tr("Import your Google contacts", "view/user_contacts/_nav"), :controller => "import", :action => "authenticate_google" %>
          </span>
        </li>     

        <% if current_government.has_yahoo_enabled? %>
        <li class="tab2">
          <span class="tab_header">
            <%= link_to tr("Yahoo", "view/user_contacts/_nav"), :controller => "import", :action => "yahoo" %>
          </span>
        </li> 
        <% end %>
        
        <% if current_government.has_windows_enabled? %>
        <li class="tab3">
          <span class="tab_header">
            <%= link_to tr("Windows Live", "view/user_contacts/_nav"), :controller => "import", :action => "windows" %>
          </span>
        </li> 
        <% end %>
        
        <% if current_government.has_facebook_enabled? %>
        <li class="tab4">
          <span class="tab_header">
            <%= link_to tr("Facebook", "view/user_contacts/_nav"), :controller => "facebook", :action => "invite" %>
          </span>
        </li> 
        <% end %>
        
      </ul>   
      
    </div>  
  </div>
  
<% end %>
<% end %>
