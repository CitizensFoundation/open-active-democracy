<div id="activity_add_<%= activity.id.to_s %>">
<% if following %>
	<span class="big_x">

		<%= link_to image_tag("esb_entry_bookmark_selected.gif", :border => 0, :style=>"float:left;", :alt => escape_t(t(:ajax_stop_following_discussion))),
		            activity_following_path(activity, following, :region => "activity_show"),
		            :method => :delete,
                'data-disable-with' => "",
                'data-loader-name' => "circle",               
                :remote=>true,            
		            :class => "priority_remove_link", :title =>"Hætta að fylgjast með umræðu", :alt => escape_t(t(:ajax_stop_following_discussion)) %>
	</span>
<% else %>
	<span class="big_x">
		<%= link_to image_tag("esb_entry_bookmark.gif", :border => 0, :style=>"float:left;", :title => escape_t(t(:ajax_follow_discussion)), :alt => escape_t(t(:ajax_follow_discussion))), 
		            activity_followings_path(activity, :region => "activity_show"),
		            :method => :post,
                'data-disable-with' => "",
                'data-loader-name' => "circle",               
                :remote=>true,            
		            :class => "priority_add_link", :title => escape_t(t(:ajax_follow_discussion)), :alt => escape_t(t(:ajax_follow_discussion)) %>

	</span>
<% end %>
</div>