<% if logged_in? and not current_user.activated? %>
	<div id="not_activated_header"><%= tr("Please verify your account", "view/shared/_activated")%></div>
	<div id="not_activated">
<%= tr("<p>Check your <span class=\"highlight\">{user.email}</span> inbox for an email from {government.admin_name} to verify your account and ensure your priorities count.  If that email address is incorrect, please <a href=\"/settings\">update it here</a> then <a href=\"/users/{user.id}/resend_activation\">click here</a> to have a new verification email sent.
{% if government.has_facebook_enabled? and government.has_twitter_enabled? %}</p>", "view/shared/_activated")%>
<%= tr("<p>Or you can skip all that and verify your account by connecting with Facebook or Twitter.</p>", "view/shared/_activated")%>
<%= tr("<p><fb:login-button onLogin=\"window.location='http://{government.base_url}/'\" size=\"medium\" background=\"white\" length=\"long\"></fb:login-button></p>", "view/shared/_activated")%>
<%= tr("<p><a href=\"/twitter/create\"><img src=\"/images/twitter_signin.png\" border=\"0\"></a></p>", "view/shared/_activated")%>
{% endif %}
<%= tr("<p>This message will go away when verified.</p>", "view/shared/_activated")%>

	</div>
<% end %>