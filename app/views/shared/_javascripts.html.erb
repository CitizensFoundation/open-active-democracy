<% if ['color_schemes'].include?(params[:controller]) %>
	<%= javascript_include_tag "colorpicker" %>
<% end %>
<%= javascript_include_tag "facebox","jquery.autocomplete.pack","jquery.NobleCount.min", "jquery.timeago",
                           "jquery.truncator","autoresize.jquery.min","jquery.defaultvalue","jquery.hoverIntent.minified",
                           "jquery.bgiframe.min","jquery.corner","jquery.delayedObserver",
                           "jquery-ui.min", "application" %>

<script type="text/javascript">
jQuery(document).ready(function() {
	<% if @tag %>
		jQuery("input#priority_name").DefaultValue("<%= escape_javascript(@tag.prompt_display) %>");
	<% else %>
		jQuery("input#priority_name").DefaultValue("<%= escape_javascript(current_government.prompt) %>");
	<% end %>
	jQuery("input#q_top").DefaultValue("<%= tr("Search", "view/shared/_javascripts") %>");
	jQuery("input#user_login_search").DefaultValue("<%= tr("Find a member", "view/shared/_javascripts") %>");
	jQuery("input#right_priority_box").DefaultValue("<%= tr("Add a priority to your list", "view/shared/_javascripts").html_safe %>") 
	jQuery(".comment_content").truncate({max_length: 1000, more: "<%= tr("show full comment", "view/shared/_javascripts") %>", less: "<%= tr("hide full comment", "view/shared/_javascripts") %>"});
	<%= render :partial => "shared/javascripts_reloadable" %>
jQuery('div.ui-widget-content').corner();
jQuery('div.userwrap').corner();
jQuery('div.endorse-wrap').corner();
jQuery('div.oppose-wrap').corner();
jQuery('div.comment_box').corner();
 

});
</script>
