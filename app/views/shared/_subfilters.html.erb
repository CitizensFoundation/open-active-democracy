		<b>Svarað</b>
	    <%=link_to t('esb.subfilter.unanswered.label') , "/osvaradar_spurningar", :title => t('esb.subfilter.unanswered.mouseover'), :alt => t('esb.subfilter.unanswered.mouseover') %>
	<% elsif session[:questions_subfilter]=="unanswered" %>
<!--	    <%=link_to "Allt", "/questions?r=1" %> -->

	    <%=link_to t('esb.subfilter.answered.label'), "/svaradar_spurningar", :title => t('esb.subfilter.answered.mouseover') , :alt => t('esb.subfilter.answered.mouseover')  %>
