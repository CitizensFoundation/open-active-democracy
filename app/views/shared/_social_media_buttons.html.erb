<script type="text/javascript">
$(function(){
    <!-- Google +1 button -->
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
});
</script>
<% if params[:controller] == "portal" %>
    <div class="socmedia_buttons">
      <ul>
        <li class="list_left">
          <div class="g-plusone" data-size="medium" data-href="http://<%= request.host_with_port %>"></div>
        </li>


        <li class="list_left">
    <span class="point_fblike">
      <fb:like href="http://<%= request.host_with_port %>" layout="button_count" ref="priority" show-faces="false" width="120" action="<%=tr("like","facebook")%>" colorscheme="light"></fb:like>
    </span>
        </li>
      </ul>
    </div>
<% end  %>