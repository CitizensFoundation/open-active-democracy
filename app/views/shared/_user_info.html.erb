<div id="user_info_box">
<table width="100%">
  <tr>
    <td>      
        <div id="user_info_box_name_and_menu">
          <span class="profile_name"><%= current_user.name%></span><br>
          <%= link_to tr("Settings","views/shares/_user_info"), :controller=>"settings" %> | 
          <%= link_to tr("Logout", "view/shared/_user_info"), :controller=>"sessions", :action=>"destroy" %> 
        </div>
        <br>
        <%= render :partial => "shared/facebook" %>
    </td>
    <td>
        <div id="user_info_box_picture">
          <%= render :partial => "users/pic_48", :locals => {:user => current_user}%>
        </div>
    </td>
  </tr>
</table>
</div>
      