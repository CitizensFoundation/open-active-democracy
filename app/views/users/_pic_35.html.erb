<% if user.has_picture? %>
	<%= image_tag user.buddy_icon.url(:icon_48), :size => "35x35", :border => 0, :align => "left" %>
<% elsif user.facebook_id %>
     <%= fb_profile_pic user,:facebook_logo=>false, :linked=>false, :size=>"square", :height=>"35",:width=>"35"%>
<% else %>
  <%= image_tag current_government.buddy_icon.url(:icon_48), :size => "35x35", :border => 0 %>
<% end %>