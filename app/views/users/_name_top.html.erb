<%= link_to user.login, user %><span class="pc"><%= user.capitals_count%><%= current_government.currency_short_name %></span>
<%= tr("{count} endorsements", "view/users/_name_top", :count => user.up_endorsements_count) %>
<% if user.down_endorsements_count > 0 %>
	&middot; <%= tr("{count} oppositions", "view/users/_name_top", :count => user.down_endorsements_count) %>
<% end %>
<% if user.has_top_priority? %>
	<br/><%= tr("#1 priority:", "view/users/_name_top") %>
	<% if user.top_endorsement.is_down? %><span class="opposed"><%= tr("Opposing", "view/users/_name_top")%></span><% end %>
	<%= link_to user.top_endorsement.priority.name, user.top_endorsement.priority %>.
<% end %>