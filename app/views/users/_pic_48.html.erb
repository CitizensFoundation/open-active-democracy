<% if user.has_picture? %>
		<%= image_tag user.buddy_icon.url(:icon_48), :size => "48x48", :border => 0, :align => "left" %>
<% elsif user.facebook_id %>
     <%= fb_profile_pic user,:facebook_logo=>false, :linked=>false, :size=>"square"%>
<% else %>
	<%= image_tag "profile_default.png", :size => "48x48", :border => 0, :align => "left" %>
<% end %>