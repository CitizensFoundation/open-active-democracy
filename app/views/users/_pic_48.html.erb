<% if user.has_picture? %>
	<a href="/settings/picture" title="<%= t('esb.mouseover.edituser')%>"><%= image_tag user.buddy_icon.url(:icon_48), :size => "48x48", :border => 0, :align => "left" %></a>
<% elsif Facebooker.api_key and user.has_facebook? %>
	<a href="<%= url_for user %>"><fb:profile-pic uid="<%= user.facebook_uid.to_s %>" width="48px" border="0" linked="false"></fb:profile-pic></a>
<% else %>
	<%= image_tag "profile_default.png", :size => "48x48", :border => 0, :align => "left" %>
	<%#= image_tag current_government.buddy_icon.url(:icon_48), :size => "48x48", :border => 0, :align => "left" %>
<% end %>