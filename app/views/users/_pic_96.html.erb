<% if user.has_picture? %>
	<a href="<%= url_for user %>"><%= image_tag user.buddy_icon.url(:icon_96), :size => "96x96", :border => 0 %></a>
<% elsif user.facebook_id %>
     <%= fb_profile_pic user,:facebook_logo=>false, :linked=>false, :size=>"small" %>
<% else %>
	<%= image_tag "profile_default.png", :alt=>"Engin mynd", :size => "96x96", :border => 0, :align => "left" %>
<% end %>