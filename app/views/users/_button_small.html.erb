<span id="priority_<%= user.id.to_s %>_button_small">
<% if following %>

	<% if following.is_up? %>
		<span class="priority_remove" id="user_add_<%= user.id.to_s %>">
			<%= tr("Following", "view/users/_button_small")%> 
			<%= link_to "&nbsp;x".html_safe, unfollow_user_path(user, :region => "user_left", :value => 1), 
                :method => :post,
                :remote=>true,
                'data-disable-with' => "",
                'data-loader-name' => "circle",
  	            :class => "priority_remove_link", :title => tr("Remove this person from your network", "view/users/_button_small") %>
		</span>
	<% else %>
		<span class="priority_remove_oppose" id="user_add_<%= user.id.to_s %>">
			<%= tr("Ignoring", "view/users/_button_small")%> 
			<%= link_to "&nbsp;x".html_safe, unfollow_user_path(user, :region => "user_left", :value => -1),
                  :method => :post,
                  :remote=>true,
                  'data-disable-with' => "",
                  'data-loader-name' => "circle",
			            :class => "priority_remove_link", :title => tr("Stop ignoring this person", "view/users/_button_small") %>
		</span>
	<% end %>
	
<% else %>
	<span class="priority_add" id="user_add_<%= user.id.to_s %>">
		<%= link_to tr("Follow", "view/users/_button_small"), follow_user_path(user, :region => "user_left", :value => 1),
                :method => :post,
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_follow_capitalize)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title => tr("I want to follow this person's comments and activity", "view/users/_button_small") %>	
	</span>
	<span class="endorse_or"><%= tr("OR", "view/users/_button_small")%></span>
	<span class="priority_add" id="user_add_<%= user.id.to_s %>">
		<%= link_to tr("Ignore", "view/users/_button_small"), follow_user_path(user, :region => "user_left", :value => -1),
                :method => :post,
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_ignore_capitalize)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title => tr("I want to ignore this person's comments and activity", "view/users/_button_small") %>	
	</span>	
<% end %>
</span>