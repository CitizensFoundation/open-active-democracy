<span id="priority_<%= user.id.to_s %>_button_small">
<% if following %>

	<% if following.is_up? %>
		<span class="priority_remove" id="user_add_<%= user.id.to_s %>">
			<%= t('follow.ing')%> 
			<%= link_to "&nbsp;x".html_safe, unfollow_user_path(user, :region => "user_left", :value => 1), 
                :method => :post,
                :remote=>true,
                'data-disable-with' => "",
                'data-loader-name' => "circle",
  	            :class => "priority_remove_link", :title => t('follow.delete.title') %>
		</span>
	<% else %>
		<span class="priority_remove_oppose" id="user_add_<%= user.id.to_s %>">
			<%= t('ignore.ing')%> 
			<%= link_to "&nbsp;x".html_safe, unfollow_user_path(user, :region => "user_left", :value => -1),
                  :method => :post,
                  :remote=>true,
                  'data-disable-with' => "",
                  'data-loader-name' => "circle",
			            :class => "priority_remove_link", :title => t('ignore.delete.title') %>
		</span>
	<% end %>
	
<% else %>
	<span class="priority_add" id="user_add_<%= user.id.to_s %>">
		<%= link_to t('follow.capitalize'), follow_user_path(user, :region => "user_left", :value => 1)
                :method => :post,
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_follow_capitalize)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title => t('follow.title') %>	
	</span>
	<span class="endorse_or"><%= t('or')%></span>
	<span class="priority_add" id="user_add_<%= user.id.to_s %>">
		<%= link_to t('ignore.capitalize'), follow_user_path(user, :region => "user_left", :value => -1),
                :method => :post,
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_ignore_capitalize)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title => t('ignore.title') %>	
	</span>	
<% end %>
</span>