<b><%=@page_title%></b><br><br>
<% @all.each do |action_item| %>
	<% if action_item.instance_of?(Priority) %>
		<%= render :partial => "comments/show_first", :locals => {:comment => action_item.activities.first.comments.first, :suffix => "_noself"} %>
	<% elsif action_item.instance_of?(Question) %>
		<%= render :partial => "questions/show_full", :locals => {:question => action_item, :revision=>nil, :skip_details=>true, :suffix => "_noself"} %>
	<% elsif action_item.instance_of?(Document) %>
		<%= render :partial => "documents/show_full", :locals => {:document => action_item, :revision=>nil, :skip_details=>true, :suffix => "_noself"} %>
	<% elsif action_item.instance_of?(Comment) %>
		<%= render :partial => "comments/show", :locals => {:comment => action_item, :suffix => "_noself"} %>		
	<% end %>
_________________________________________________________________<br>
<% end %>
