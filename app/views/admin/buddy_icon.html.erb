<div id="hp_intro">
	<%= @page_title %>
</div>
<p>	
<% if current_government.has_buddy_icon? %>
	<table border="0" cellspacing="0" cellpading="0">
		<tr><td><%= image_tag current_government.buddy_icon.url(:icon_96), :border => 0 %></td>
			<td><%= image_tag current_government.buddy_icon.url(:icon_48), :border => 0 %></td>
			<td><%= image_tag current_government.buddy_icon.url(:icon_24), :border => 0 %></td>
		</tr>
	</table>
<% end %>

<%= form_for(current_government, :url => {:action => "buddy_icon_save" }, :html => {:multipart => true}) do |f| %>
<%= f.error_messages %>

<p>
<%= f.file_field :buddy_icon %><br/>
<span class="small"><%= tr("Must be a gif, jpg or png", "view/admin/buddy_icon") %></span>

<p><%= submit_tag tr("Upload and save your picture", "view/admin/buddy_icon"), :class => "yellow_button" %></p>
<% end %>
