<%= form_for :session, :url => session_path do |f| -%>
	<div class="field">
		<div class="field_label">
			<%= tr("Email address", "view/sessions/_form")%>
		</div>
		<div class="field_box scale_bottom">
			<%= text_field_tag :email %>
		</div>
	</div>
	
	<div class="field">
		<div class="field_label">
			<%= tr("Password", "view/sessions/_form")%>
		</div>
		<div class="field_box scale_bottom">
			<%= password_field_tag :password %>
		</div>
	</div>	
	<%= submit_tag tr("Sign in", "view/sessions/_form"), :class => "submit_button" %>
<% end -%>
