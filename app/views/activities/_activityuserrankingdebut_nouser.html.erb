<% if activity.attribute_present?("position") %>
	<img src="/images/icons/medal_<%= activity.position > 100 ? "bronze_3.png" : "gold_3.png" %>" height="16" width="16" border="0" class="icon">
	<%= raw tr("Debuted on the most influential chart at {position}", "view/activities/_activityuserrankingdebut_nouser", :user_name => link_to(activity.user.name, activity.user), :position => number_with_delimiter(activity.position)) %>
<% else %>
	<img src="/images/icons/medal_gold_3.png" height="16" width="16" border="0" class="icon">
	<%= raw tr("Debuted on the most influential chart", "view/activities/_activityuserrankingdebut_nouser", :user_name => link_to(activity.user.name, activity.user)) %>
<% end %>
