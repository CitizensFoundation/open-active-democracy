<% if activity.revision.has_other_priority? %>
<img src="/assets/icons/comments_add.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} linked {point_name} to {priority_name}", "view/activities/_activitypointrevisionotherpriority_noself", :user_name => link_to(activity.user.login, activity.user), :point_name => link_to(activity.point.name, point_revision_url(activity.point,activity.revision)), :priority_name => link_to(activity.revision.other_priority.name, activity.revision.other_priority)) %>.
<% else %>
<img src="/assets/icons/comments_delete.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} removed the priority link from {point_name}", "view/activities/_activitypointrevisionotherpriority_noself", :user_name => link_to(activity.user.login, activity.user), :point_name => link_to(activity.point.name, point_revision_url(activity.point,activity.revision))) %>.
<% end %>
