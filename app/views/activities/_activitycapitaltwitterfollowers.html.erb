<% if activity.capital.amount > 0 %>
<img src="/images/icons/coins.png" height="16" width="16" border="0" class="icon">
<%= raw t('activity.capital.twitter.followers.earned.link', :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user), :twitter_login => activity.user.twitter_login)%>
<% else %>
<img src="/images/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
<%= raw t('activity.capital.twitter.followers.lost.link', :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user), :twitter_login => activity.user.twitter_login)%>
<% end %>
