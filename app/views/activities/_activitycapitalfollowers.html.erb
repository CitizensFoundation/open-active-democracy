<% if activity.capital.amount > 0 %>
<img src="/assets/icons/coins.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} earned {count}{currency_short_name} for {count} new followers", "view/activities/_activitycapitalfollowers", :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% else %>
<img src="/assets/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} lost {count}{currency_short_name} for {count} less followers", "view/activities/_activitycapitalfollowers", :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% end %>
