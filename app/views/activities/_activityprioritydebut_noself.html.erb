<% if activity.attribute_present?("position") %>
	<img src="/assets/icons/medal_<%= activity.position > 100 ? "bronze_3.png" : "gold_3.png" %>" height="16" width="16" border="0" class="icon">
	<%= raw tr("Debuted on the charts at {position}", "view/activities/_activityprioritydebut_noself", :priority_name => link_to(activity.priority.name, activity.priority), :position => number_with_delimiter(activity.position)) %>
<% else %>
	<img src="/assets/icons/medal_gold_3.png" height="16" width="16" border="0" class="icon">
	<%= raw tr("Debuted on the charts", "view/activities/_activityprioritydebut_noself", :priority_name => link_to(activity.priority.name, activity.priority)) %>
<% end %>