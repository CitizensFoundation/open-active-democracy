<% if activity.capital.amount > 0 %>
<img src="/images/icons/coins.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} earned {capital}{currency_short_name} because opposers found {point_name} helpful", "view/activities/_activitycapitalpointhelpfulopposers", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
<% else %>
<img src="/images/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
<%= raw tr("{user_name} lost {capital}{currency_short_name} because opposers found {point_name} unelpful", "view/activities/_activitycapitalpointhelpfulopposers", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
<% end %>
