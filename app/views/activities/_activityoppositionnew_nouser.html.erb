<img src="/images/icons/delete.png" height="16" width="16" border="0" class="icon">
<% if activity.has_ad? %>
	<% if activity.attribute_present?("position") %>
		<%= raw t('activity.opposition.new.ad.nouser.known', :user_name => link_to(activity.user.login, activity.user), :priority_name => link_to(activity.priority.name, activity.priority), :position => activity.position, :ad_url => priority_ad_path(activity.priority,activity.ad), :ad_user =>  activity.ad.user.name.possessive) %>
	<% elsif activity.priority %>
		<%= raw t('activity.opposition.new.ad.nouser.unknown', :user_name => link_to(activity.user.login, activity.user), :priority_name => link_to(activity.priority.name, activity.priority), :ad_url => priority_ad_path(activity.priority,activity.ad), :ad_user =>  activity.ad.user.name.possessive) %>
	<% end %>
<% else %>
	<% if activity.attribute_present?("position") %>
		<%= raw t('activity.opposition.new.nouser.known', :user_name => link_to(activity.user.login, activity.user), :priority_name => link_to(activity.priority.name, activity.priority), :position => activity.position) %>
	<% elsif activity.priority %>
		<%= raw t('activity.opposition.new.nouser.unknown', :user_name => link_to(activity.user.login, activity.user), :priority_name => link_to(activity.priority.name, activity.priority)) %>
	<% end %>
<% end %>