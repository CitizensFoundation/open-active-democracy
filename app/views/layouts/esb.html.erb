					<li><%= link_to "Staða viðræðna", :controller=>"treaty_documents" %></li>
					<li><%= link_to "Nýtt efni", :controller=>"treaty_documents", :action=>"newest" %></li>
				</ul>
				<ul>
			<div id="left_tabs">
				     <li <%= controller_name=="news" ? "class='active'" : "" %>>
