<div id="hp_intro"><%= @page_title %></div>
<p>
<table border="0" cellspacing="0" cellpadding="0">
<% for user in @users %>
	<% @row += 1%>
	<tr><td valign="top">
		<div class="priority_position"><%= @row %></div>
		</td>
		<td valign="top" width="26" class="user_pic_contributors">
			<%= render :partial => "users/pic", :locals => {:user => user}%>
		</td><td class="td_pc" valign="top">
			<%= link_to user.login, user %><span class="pc"><%= user.capitals_count%><%= current_government.currency_short_name %></span>
			<%= revisions_sentence(user) %>
			<% if user.has_top_priority? %>
				<br/><%= tr("#1 priority:", "view/briefing/contributors") %>
				<% if user.top_endorsement.is_down? %><span class="opposed"><%= tr("Opposing", "view/briefing/contributors")%></span><% end %>
				<%= link_to user.top_endorsement.priority.name, user.top_endorsement.priority %>.
			<% end %>
		</td>
	</tr>
<% end %>					
</table>				
<p>
<%= will_paginate(@users) %>


