<% TreatyDocument::TREATY_ARRAY.each do |chapter| %>
	<tr>
		
		<td>
			<%= chapter[:name] %>
		</td>
		<% chapter[:negotiation_stages].each do |stage| %>
		<td>
			<% count = TreatyDocument.count(:conditions=>"chapter = #{chapter[:id]} AND negotiation_status = #{stage[:id]}") %>
			<% if count > 0 and count < TreatyDocument::MAXIMUM_NUMBER_OF_DOCUMENTS %>
				<span style="color:<%=GrayScaleColor.from_fraction(count.to_f/TreatyDocument::MAXIMUM_NUMBER_OF_DOCUMENTS.to_f).html %>">
			<% elsif count > 0 %>
				<span style="color:#000">
			<% else %>
				<span style="color:#fff">
			<% end %>
				<% if count>0 %>
					<%= link_to count, :action=>"show", :chapter_id=>chapter[:id], :negotiation_status=>stage[:id]%>
				<% else %>
					<%=count%>
				<% end %>
			</span>
		</td>
		<% end %>
	</tr>
<% end %>
</table> 
