<% if document.flags_count > 0 and document.status == 'published' and logged_in? and current_user.is_admin? %>
	<div class="warning_inline" id="document_flag_<%= document.id.to_s %>">
		<span class="red"><%= tr("{count} flags", "view/documents/_flagged", :count => document.flags_count)%></span>. <%= tr("Issue {user_name} warning {warnings_count}", "view/documents/_flagged", :user_name => document.user.login, :warnings_count => document.user.warnings_count) %>
		<span class="tag_button">
			<%= link_to tr("YES", "view/documents/_flagged"), "/documents/abusive/#{document.id}",
                  :method=>:post,
                  :remote=>true,
                  'data-disable-with' => escape_t(tr("Issuing warning","Ajax")),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Issue warning", "view/documents/_flagged") %></span>
		<span class="or"><%= tr("OR", "view/documents/_flagged") %></span>

		<span class="tag_button">
			<%= link_to tr("NO", "view/documents/_flagged"), "/documents/not_abusive/#{document.id}",
                  :method=>:post,
                  :remote=>true,
                  'data-disable-with' => escape_t(tr("Clearing warning","Ajax")),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Clear flag", "view/documents/_flagged") %>
		</span>		
	</div>
<% end %>