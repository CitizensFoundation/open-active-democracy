<div class="point" id="<%= document.id %>">
<div class="point_name">
<% if document.is_down? %>
	<span class="opposed"><%= tr("opposed", "view/documents/_show")%></span>
<% end %>
<%= link_to_unless_current h(document.name), document %>
</div>
<div class="point_byline">
	<%= tr("{count} words", "view/documents/_show", :count => document.word_count) %> <%= tr("by {author_sentence}", "view/documents/_show", :author_sentence => document.author_sentence) %>, <%= tr("added {time_ago}", "view/documents/_show", :time_ago => time_ago(document.created_at)) %>
</div>

<% @point_value = document.value %>
<%= render :partial => "points/helpful_count", :locals => {:point => document} %>
</div>
