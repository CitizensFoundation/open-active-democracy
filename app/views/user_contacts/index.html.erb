<div id="hp_intro"><%= @page_title %></div>
<p>

  <% if current_user.contacts_count > 0 %>
      <%= render :partial => "import_nav", :locals => {:user => current_user} %>
    <p>
<% end %>

<%= tr("<p>Find people you know by importing contacts from your online email and social networking accounts.</p>", "view/user_contacts/index") %>
<%= tr("<p>You will be taken to the other site to authorize access for {government_name}, and then once imported, you can see who's already on the site to add them to your network, and then invite anyone who isn't a member to join.</p>", "view/user_contacts/index", :government_name => tr(current_government.name, "Name from database")) %>
<%= tr("<p>No one will receive an email unless you explicitly send it yourself.  You will earn<span class=\"pc\">5sp</span> for every new member you refer, increasing your <a href=\"/network\">influence</a> at {government_name}.</p>", "view/user_contacts/index", :government_name => tr(current_government.name, "Name from database")) %>
<%= tr("<p>Click the service you want to import from:</p>", "view/user_contacts/index") %>
<p>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <td valign="middle" align="middle">
      <%= link_to image_tag("gmail-logo.jpg", :border => 0), :controller => "import", :action => "authenticate_google" unless current_government.layout=="better_reykjavik" %>
    </td>
    <% if current_government.has_yahoo_enabled? %>
        <td valign="middle" align="middle">
          <%= link_to image_tag("yahoo-mail-logo.jpg", :border => 0), :controller => "import", :action => "yahoo" %>
        </td>
    <% end %>
    <% if current_government.has_facebook_enabled? %>
        <td valign="middle" align="middle">
          <% if current_government.has_facebook_enabled? %>
              <% if current_facebook_user %>
                  <%= link_to image_tag("facebook-logo.jpg", :border => 0), :controller => "facebook", :action => "invite", :html => {:class => "import_button"} %>
              <% else %>
                  <a href="#" onClick="FB.login(function() { window.location='<%= url_for(:only_path => false, :controller => 'facebook', :action => 'invite') %>'; });"><%= image_tag("facebook-logo.jpg", :border => 0) %></a>
              <% end %>
              <br><br>
          <% end %>
        </td>
    <% end %>
    <% if current_government.has_windows_enabled? %>
        <td valign="middle" align="middle">
          <%= link_to image_tag("windows-live-hotmail-logo.gif", :border => 0), :controller => "import", :action => "windows" %>
        </td>
    <% end %>
  </tr>
</table>


