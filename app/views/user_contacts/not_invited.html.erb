<div id="hp_intro"><%= tr("Find people you know at {government_name}", "view/user_contacts/not_invited", :government_name => current_government.name)%></div>

<%= render :partial => "import_nav", :locals => {:user => current_user} %>		

<% if @contacts.any? %>
	<p><%= tr("{contacts_count} of your contacts are <i>not</i> {government_name} members.<br/>Checkbox the people you'd like to invite and click the big yellow button.", "view/user_contacts/not_invited", :contacts_count => @contacts.size, :government_name => current_government.name)%>
	<% form_tag :loading => "Element.show('status');",
              :remote=>true,
              'data-disable-with' =>  escape_t(tr("Sending","Ajax")),
	            :url => multiple_user_contacts_url, :method => :put do %>				
		
		<% if @contacts.size > 1 %>
			<%= link_to_function(tr("Check/Uncheck All", "view/user_contacts/not_invited"),"toggleAll('select');return false;") %>
		<% end %>
		<% if @contacts.size > 6 %>
			<div id="contacts">
		<% else %>
			<div id="contacts_small">
		<% end %>
		<% for c in @contacts %>
			<div id="contact_<%= c.id %>">
				<%= check_box_tag "contact_ids[]", c.id, false, :class => "select" %> 
				<%= c.name %> &lt;<%= c.email %>&gt;
			</div>
		<% end %>					
		</div>
		<% if current_user.login != current_user.real_name %>
			<p><%= tr("Should I reference your real name, or your site name?", "view/user_contacts/not_invited")%><br/>
			<%= radio_button_tag :is_from_realname, false %> <%= current_user.login %>					
		    <%= radio_button_tag :is_from_realname, true %> <%= current_user.real_name %>	
		<% end %>					
		<p>
		<table border="0" cellspacing="0" cellpadding="0">
			<tr><td>	
				<%= submit_tag tr("Invited checked people to join {government_name}", "view/user_contacts/not_invited", :government_name => current_government.name), :class => "yellow_button" %>
				</td><td valign="top">
					<div id="status" style="display: none;">
						<%= tr("Processing...", "view/user_contacts/not_invited")%>
					</div>
				</td>
			</tr>
		</table>
			
		<%= render :partial => "preview" %>
		
	<% end %>	

<% end %>
