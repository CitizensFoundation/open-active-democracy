<div id="import_nav">
<% if user.followings_count == 0 %>
	<span class="greyed_out"><%= tr("Your network", "view/user_contacts/_import_nav")%> (<span id='followings_count'>0</span>)</span>
<% else %>
	<%= link_to_unless_current tr("Your network", "view/user_contacts/_import_nav") + " (<span id='followings_count'>#{user.followings_count}</span>)", following_user_contacts_path(user) %>
<% end %>

&middot; 
<% if user.contacts_members_count == 0 %>
	<span class="greyed_out"><%= tr("Already members", "view/user_contacts/_import_nav")%> (<span id='contacts_members_count'>0</span>)</span>
<% else %>
	<%= link_to_unless_current tr("Already members", "view/user_contacts/_import_nav") + " (<span id='contacts_members_count'>#{user.contacts_members_count}</span>)", members_user_contacts_path(user) %>
<% end %>

&middot;
<% if user.contacts_not_invited_count == 0 %>
	<span class="greyed_out"><%= tr("Not invited", "view/user_contacts/_import_nav")%> (<span id='contacts_not_invited_count'>0</span>)</span>
<% else %>
	<%= link_to_unless_current tr("Not invited", "view/user_contacts/_import_nav") + " (<span id='contacts_not_invited_count'>#{user.contacts_not_invited_count}</span>)", not_invited_user_contacts_path(user) %>
<% end %>

&middot; 
<% if user.contacts_invited_count == 0 %>
	<span class="greyed_out"><%= tr("Invited", "view/user_contacts/_import_nav")%> (<span id='contacts_invited_count'>0</span>)</span>
<% else %>
	<%= link_to_unless_current tr("Invited", "view/user_contacts/_import_nav") + " (<span id='contacts_invited_count'>#{user.contacts_invited_count}</span>)", invited_user_contacts_path(user) %>
<% end %>
</div>