<% if logged_in? %>
<% ad = current_user.pick_ad(current_priority_ids) %>
<% if ad %>
 <div id="ads"><div id="notification_show">
    <%= render :partial => "ads/show", :locals => {:ad => ad }%>
</div></div>
<% end %>
<% else %>
<% ad = Ad.active.filtered.most_paid.by_random.first %>
<% if ad %>
 <div id="ads"><div id="notification_show">
  <%= render :partial => "ads/show", :locals => {:ad => ad }%>
</div></div>
<% end %>
<% end %>

