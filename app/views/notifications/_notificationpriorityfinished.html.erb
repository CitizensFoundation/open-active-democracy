<% if notification.notifiable.priority.is_successful? %>
<img src="/assets/fugue/star.png" height="16" width="16" border="0" class="notification_icon">
<%= tr("{priority_name} was completed successfully", "view/notifications/_notificationpriorityfinished", :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_compromised? %>
<img src="/assets/fugue/star_half.png" height="16" width="16" border="0" class="notification_icon">
<%= tr("{priority_name} was completed with a compromise", "view/notifications/_notificationpriorityfinished", :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_failed? %>
<img src="/assets/fugue/star_empty.png" height="16" width="16" border="0" class="notification_icon">
<%= tr("{priority_name} failed", "view/notifications/_notificationpriorityfinished", :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_intheworks? %>
<img src="/assets/fugue/hammer.png" height="16" width="16" border="0" class="notification_icon">
<%= tr("{priority_name} is in the works", "view/notifications/_notificationpriorityfinished", :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% end %>