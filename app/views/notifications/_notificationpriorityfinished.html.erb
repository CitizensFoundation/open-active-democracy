<% if notification.notifiable.priority.is_successful? %>
<img src="/images/fugue/star.png" height="16" width="16" border="0" class="icon">
<%= t('activity.priority.official_status.successful.name', :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_compromised? %>
<img src="/images/fugue/star_half.png" height="16" width="16" border="0" class="icon">
<%= t('activity.priority.official_status.compromised.name', :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_failed? %>
<img src="/images/fugue/star_empty.png" height="16" width="16" border="0" class="icon">
<%= t('activity.priority.official_status.failed.name', :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% elsif notification.notifiable.priority.is_intheworks? %>
<img src="/images/fugue/hammer.png" height="16" width="16" border="0" class="icon">
<%= t('activity.priority.official_status.intheworks.name', :priority_name => link_to(notification.notifiable.priority.name, notification.notifiable.priority))%>
<% end %>