<%= render :partial => "header" %>
<%= render :partial => "nav" %>

<div class="clearfix">
<div class="endorse-wrap">
<div class="best-points">
          <div class="header-add">
            <%= render partial: "points_header", locals: { priority: @priority, support: true } %>
          </div>

					<div class="sub_header">
            <%=tr("Points for", "view/priorities/top_points") %><%=get_points_number_text(@points_top_up.length,@total_up_points) %><span class="separator">|</span><%=link_to(tr("All points for endorse", "view/priorities/top_points"), endorsed_top_points_priority_url(@priority)) %>
					</div>            

            <div id="pro_top">
                <%= render :partial => "points/short_list", :locals => {:id => "pro_top", :points => @points_top_up, :numbering=>true} %>
            </div>
</div>


<div class="sub_header">
                <%=tr("Newest Points For", "view/priorities/top_points") %><%=get_points_number_text(@points_new_up.length,@total_up_points_new,true) %><span class="separator">|</span><%=link_to(tr("All points for endorse", "view/priorities/top_points"), endorsed_top_points_priority_url(@priority,:by_newest=>true)) %>

            </div>
            <div id="pro_new">
                <%= render :partial => "points/short_list", :locals => {:newest_points=>true, :id => "pro_new", :points => @points_new_up, :numbering=>false} %>
            </div>
</div>

<div class="oppose-wrap">
            <div class="header-add">
              <%= render partial: "points_header", locals: { priority: @priority, support: false } %>
            </div>
<div class="sub_header pro">
                <%=tr("Points Against", "view/priorities/top_points") %><%=get_points_number_text(@points_top_down.length,@total_down_points) %><span class="separator">|</span><%=link_to(tr("All points for oppose", "view/priorities/top_points"), opposed_top_points_priority_url(@priority)) %>

            </div>
            <div id="con_top">
                <%= render :partial => "points/short_list", :locals => {:id => "con_top", :points => @points_top_down, :numbering=>true} %>
            </div>

  <div class="sub_header">
                <%=tr("Newest Points Against", "view/priorities/top_points") %><%=get_points_number_text(@points_new_down.length,@total_down_points_new,true) %><span class="separator">|</span><%=link_to(tr("All points for oppose", "view/priorities/top_points"), opposed_top_points_priority_url(@priority,:by_newest=>true)) %>

            </div>
            <div id="con_new">
                <%= render :partial => "points/short_list", :locals => {:newest_points=>true, :id => "con_new", :points => @points_new_down, :numbering=>false} %>
            </div>


</div>

</div>
