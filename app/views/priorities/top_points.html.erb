<%= render :partial => "header" %>
<%= render :partial => "nav" %>

<table id="top_points_table" class="container_12 newpoints">
    <tr>
        <td><div class="best-points">
            <h2><%=tr("Best points for endorse", "view/priorities/top_points") %><%=get_points_number_text(@points_top_up.length,@total_up_points) %></h2>
            <p class="below_line">
                <%=link_to(tr("All points for endorse", "view/priorities/top_points"), endorsed_top_points_priority_url(@priority)) %>
            </p>
            <div id="pro_top">
                <%= render :partial => "points/short_list", :locals => {:id => "pro_top", :points => @points_top_up, :numbering=>true} %>
            </div>
</div>
        </td>
        <td id="point_right" class="grid_6 against">
            <div class="sub_header pro">
                <h2><%=tr("Best points for oppose", "view/priorities/top_points") %><%=get_points_number_text(@points_top_down.length,@total_down_points) %></h2>
                <p class="below_line">
                    <%=link_to(tr("All points for oppose", "view/priorities/top_points"), opposed_top_points_priority_url(@priority)) %>
                </p>
            </div>
            <div id="con_top">
                <%= render :partial => "points/short_list", :locals => {:id => "con_top", :points => @points_top_down, :numbering=>true} %>
            </div>
        </td>
    </tr>
    <tr>
        <td id="" class="grid_6">
            <div class="sub_header">
                <h2><%=tr("Newest points for endorse", "view/priorities/top_points") %><%=get_points_number_text(@points_new_up.length,@total_up_points_new,true) %></h2>
                <p class="below_line">
                    <%=link_to(tr("All points for endorse", "view/priorities/top_points"), endorsed_top_points_priority_url(@priority,:by_newest=>true)) %>
                </p>
            </div>
            <div id="pro_new">
                <%= render :partial => "points/short_list", :locals => {:newest_points=>true, :id => "pro_new", :points => @points_new_up, :numbering=>false} %>
            </div>
        </td>
        <td id="point_right" class="grid_6 against">
            <div class="sub_header">
                <h2><%=tr("Newest points for oppose", "view/priorities/top_points") %><%=get_points_number_text(@points_new_down.length,@total_down_points_new,true) %></h2>
                <p class="below_line">
                    <%=link_to(tr("All points for oppose", "view/priorities/top_points"), opposed_top_points_priority_url(@priority,:by_newest=>true)) %>
                </p>
            </div>
            <div id="con_new">
                <%= render :partial => "points/short_list", :locals => {:newest_points=>true, :id => "con_new", :points => @points_new_down, :numbering=>false} %>
            </div>
        </td>
    </tr>
</table>
