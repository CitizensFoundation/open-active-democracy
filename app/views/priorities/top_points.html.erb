<%= render :partial => "header" %>
<div id="hide">
<%= render :partial => "nav" %>
</div>

<div id="endorse_oppose_top_points">

							<div id="priority_<%= @priority.id.to_s %>_button">
								<%= render :partial => "priorities/button", :locals => {:priority => @priority, :endorsement => @endorsement}%>
							</div>
							
							<span class="yes_and_no_points_link_hacky add_point_for yellow_button">
								<%=link_to(t('points.top_points.add_point_for_endorse'), new_priority_point_path(@priority,:support=>true))%>
							</span>

							<span class="yes_and_no_points_link_hacky add_point_against yellow_button">
								<%=link_to(t('points.top_points.add_point_for_oppose'), new_priority_point_path(@priority,:support=>false))%>
							</span>
</div>
  
<table id="top_points_table" class="container_12 newpoints">
	<tr>
		<td id="" class="grid_6">
			<div class="sub_header">
				<h2><%=t('points.top_points.newest_points_for_endorse')%> <%=get_points_number_text(@points_new_up.length,@total_up_points_new,true)%></h2>
				<p class="below_line"><%=link_to(t('points.top_points.all_newest_points_for_endorse'), endorsed_top_points_priority_url(@priority,:by_newest=>true))%></p>
			</div>
			<div id="pro_new">
				<%= render :partial => "points/short_list", :locals => {:id => "pro_new", :points => @points_new_up, :numbering=>false} %>
			</div>
		</td>
		<td id="point_right" class="grid_6 against">
			<div class="sub_header">
				<h2><%=t('points.top_points.newest_points_for_oppose')%> <%=get_points_number_text(@points_new_down.length,@total_down_points_new,true)%></h2>
				<p class="below_line"><%=link_to(t('points.top_points.all_newest_points_for_oppose'), opposed_top_points_priority_url(@priority,:by_newest=>true))%></p>
			</div>
			<div id="con_new">
				<%= render :partial => "points/short_list", :locals => {:id => "con_new", :points => @points_new_down, :numbering=>false} %>
			</div>

		</td>
	</tr>
</table>
