<%= render :partial => "header" %>
<%= render :partial => "nav" %>

    <% if PriorityStatusChangeLog.find_by_priority_id(@priority.id) %>
        <div class="finished_priority">
          <ul>
        <% PriorityStatusChangeLog.where(priority_id: @priority.id).order("created_at").each do |changelog| %>
              <li><p><%= changelog.content %></p></li>
          <% end %>
          </ul>
        </div>
    <% end %>

<p>
<%= form_for(@priority) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <div class="field_label">
      <%= tr("Finished Status", "view/users/_form_long")%>
    </div>
    <div class="field_box">
       <%= f.select :official_status, options_for_select_simple([[tr("Published","status_messages"),"0"],[tr("In Progress","status_messages"),"-1"],[tr("Successful","status_messages"),"2"],[tr("Failed","status_messages"),"-2"]], @priority.official_status.to_s) %>
    </div>
  </div>

    <div class="field">
    <div class="field_label">
      <%= tr("New status message", "view/priorities/status")%>
    </div>
    <div class="field_box">
        <%= f.text_area :finished_status_message, :rows => 12, :cols=>70 %>
    </div>
  </div>    


	<p>
	<%= f.submit tr("Update status", "view/priorities/status"), :class => "yellow_button" %>
	
<% end %>
