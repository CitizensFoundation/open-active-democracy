<% if priority.flags_count > 0 and priority.status == 'published' and logged_in? and current_user.is_admin? %>
	<div class="warning_inline" id="priority_flag_<%= priority.id.to_s %>">
		<span class="red"><%= tr("{count} flags", "view/priorities/_flagged", :count => priority.flags_count)%></span>. <%= tr("Issue {user_name} warning {warnings_count}", "view/priorities/_flagged", :user_name => priority.user.login, :warnings_count => priority.user.warnings_count) %>
		<span class="tag_button">
			<%= link_to tr("YES", "view/priorities/_flagged"), "/priorities/abusive/#{priority.id}",
                  :remote=>true,
                  'data-disable-with' => escape_t(tr(:ajax_issuing_warning.to_s)),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Issue warning", "view/priorities/_flagged") %></span>
		<span class="or"><%= tr("OR", "view/priorities/_flagged") %></span>

		<span class="tag_button">
			<%= link_to tr("NO", "view/priorities/_flagged"), "/priorites/not_abusive/#{priority.id}",
                  :remote=>true,
                  'data-disable-with' => escape_t(tr(:ajax_clearing_warning.to_s)),
                  'data-loader-name' => "horizontal_small",
			            :class => "quality_unhelpful_link", :title => tr("Clear flag", "view/priorities/_flagged") %>
		</span>		
	</div>
<% end %>