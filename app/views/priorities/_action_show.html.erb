<% if not ['inactive','buried'].include?(priority.status) %>
<table width="100%">
  <tr>
    <td align="left">
    	<div class="priority_actions">
    		<%= render :partial => "priorities/button_small", :locals => {:priority => priority, :endorsement => endorsement, :region => "priority_inline"} %>
    		<%= render :partial => "priorities/endorsement_count", :locals => {:priority => priority } unless defined?(noaction) and noaction == true %>
    	</div>
     </td>
     <td width="122px" height="25px" align="right">
       <fb:like href="<%=priority.show_url%>" layout="button_count" ref="priority" show-faces="false" width="120" action="<%=tr("like","facebook")%>" colorscheme="light">
     </td>
     <td width="25px" height="25px" align="right">
       <%=render :partial=>"priorities/report_content", :locals=>{:priority=>priority} %>
     </td>
   </tr>
 </table>
<% end %>