<div id="activities">
	<% @activities.each do |activity| %>
		<%= render :partial => "activities/show_single", :locals => {:activity => activity, :suffix => "_noself"} %>
	<% end %>
</div>

<div id="priorities_sidebar">
	<% if @activities.total_pages > 1 %>
		<%= will_paginate(@activities, :params => {:action => "activities"} ) %>
	<% end %>
</div>

<meta name="title" content="<%=@priority.name%>" />
<meta name="description" content="<%=@priority.description%>" />
<link rel="image_src" href="http://<%=request.host.downcase%>/images/logo_facebook_share.gif" />