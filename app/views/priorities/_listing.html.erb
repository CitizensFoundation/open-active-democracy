<div class="priority_name" id="priority_<%= priority.id %>_name">
	<%= link_to_unless_current h(priority.name), priority, :class => "priority_name_link" %>
</div>

	<%= render :partial => "priorities/tag_show", :locals => { :priority => priority }%>
	<%= render :partial => "priorities/action_show", :locals => {:priority => priority }%>
	<div id="activities">
		<% @activities = priority.activities.active.for_all_users.by_recently_updated :include => :user %>
		<% for activity in @activities %>
			<%= render :partial => "activities/show", :locals => {:activity => activity, :suffix => "_noself"} %>
		<% end %>
	</div>
