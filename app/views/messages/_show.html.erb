<div id="message_<%= message.id.to_s %>" class="message">
	
	<table border="0" cellspacing="0" cellpadding="0">
		<tr>
		<td valign="top" style="padding-top: 3px;">
			<%= render :partial => "users/pic", :locals => {:user => message.sender}%>			
		</td>			

		<td valign="top" style="padding-left: 7px;">
			<div class="small">
				<%= link_to h(message.sender.login), message.sender %>
				<% if message.status == 'sent' %><%= tr("unread", "view/messages/_show")%> &middot; <% end %>
				<%= tr("sent {time_ago}", "view/messages/_show", :time_ago => time_ago(message.sent_at)) %>
			</div>		
			<div class="message_content">		
			<%= message.content_html %>
			</div>
		</td>
		</tr>
	</table>
</div>